[user]
    name = Martin Krizek
    email = martin.krizek@gmail.com
[color]
    branch = auto
    diff = auto
    status = auto
    ui = auto
[alias]
    co = checkout
    br = branch -v
    ci = commit
    st = status
    lg = log --decorate=full
    up = !git fetch upstream && git rebase upstream/devel
    upm = !git fetch upstream && git rebase upstream/master
    pr = !sh -c 'git fetch upstream pull/$1/head:pr-$1' -
    cp = cherry-pick -x
    bs = bisect start
    bg = bisect good
    bb = bisect bad
    be = bisect reset
    sq = !sh -c 'git rebase -i HEAD~$1' -
    g = grep --break --heading --line-number
[color "diff"]
    whitespace = red reverse
[push]
    default = simple
[grep]
    extendRegexp = true
    lineNumber = true
